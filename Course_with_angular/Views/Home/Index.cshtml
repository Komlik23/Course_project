<body>
    
    <!-- Blog Content

    ================================================== --> 

    <div class="row">

        <!-- Blog Posts
        ================================================== --> 
        
        
        <div class="span4 ">
            <h5 class="title-bg">Popular Users</h5>
            <ul class="popular-posts TopUser" ng-controller="loadUsers">
                <li ng-repeat='user in users'>
                    <a href="/Project/GetUser?id={{user.Id}}"><img src="img/gallery/gallery-img-2-thumb.jpg" alt="Popular Post"></a>
                    <h6>{{user.UserName}}</h6>
                    <em>{{user.Rate}}<em>
                    <h6>{{user.ProjectsAmount}}</h6>
                </li>
            </ul>
            <button class="btn btn-mini btn-inverse" type="button" ng-click="loadMore(users)">View more</button>
        </div>
            <!--Tabbed Content-->
        <div class="span4 ">
            <h5 class="title-bg">News</h5>
            <ul class="popular-posts TopNews" ng-controller="loadNews">
                <li ng-repeat='fact in news'>
                    <a href="/Project/GetProject?id={{fact.Id}}"><img src="img/gallery/gallery-img-2-thumb.jpg" alt="Popular Post"></a>
                    <h6>{{fact.Content}}</h6>
                    <em>{{fact.Date}}</em>
                </li>
            </ul>
            <button class="btn btn-mini btn-inverse" type="button" ng-click="loadMore(news)">View more</button>
            <!--Tabbed Content-->
        </div>

        <div class="span4 ">
            <h5 class="title-bg">News</h5>
            <ul class="popular-posts Tags" ng-controller="loadTags">
                <li ng-repeat='tag in tags'>
                    <a href="/Project/GetProject?id={{fact.Id}}"><img src="img/gallery/gallery-img-2-thumb.jpg" alt="Popular Post"></a>
                    <h6>#{{tag.Text}}</h6>
                </li>
            </ul>
        </div>

            <div class="span8 blog " ng-controller='loadProjects'>
                <h4 class="title-bg span12">TOP PROJECTS</h4>
                <p style="margin-bottom: 67px;"></p>
                <!-- Blog Post 1 -->
                <article ng-repeat='project in projects' class="clearfix">
                    <a href="Home/GetProject?id={{project.Id}}"><img src="img/gallery/gallery-img-1-4col.jpg" alt="Post Thumb" class="align-left"></a>
                    <h5 class="title-bg">{{project.Title}}</h5>
                    <p>{{project.Content}}</p>

                    <div class="post-summary-footer">
                        <ul class="post-data-3">
                            <li><i class="icon-calendar"></i>{{project.DateOfEnd}}</li>
                            <li><i class="icon-user"></i> <a href="#">{{project.UserName}}</a></li>
                            <li><i class="icon-comment"></i>{{CommentsAmount}}</li>
                            <li><i class="icon-tags"></i><i ng-repeat='tag in project.tags'>{{tag.Text}}</i></li>
                        </ul>
                    </div>
                </article>
                <button class="btn btn-mini btn-inverse" type="button" ng-click="loadMore(projects)">View more</button>
            </div>




            <div class="span8 blog " ng-controller='loadNewProjects'>
                <h4 class="title-bg span12">NEW PROJECTS</h4>
                <p style="margin-bottom: 67px;"></p>
                <article ng-repeat='project in projects' class="clearfix">
                    <a href="Home/GetProject?id={{project.Id}}"><img src="img/gallery/gallery-img-1-4col.jpg" alt="Post Thumb" class="align-left"></a>
                    <h5 class="title-bg">{{project.Title}}</h5>
                    <p>{{project.Content}}</p>

                    <div class="post-summary-footer">
                        <ul class="post-data-3">
                            <li><i class="icon-calendar"></i>{{project.DateOfEnd}}</li>
                            <li><i class="icon-user"></i> <a href="#">{{project.UserName}}</a></li>
                            <li><i class="icon-comment"></i>{{CommentsAmount}}</li>
                            <li><i class="icon-tags"></i><i ng-repeat='tag in project.tags'>#{{tag.Text}}</i></li>
                        </ul>
                    </div>
                </article>
                <button class="btn btn-mini btn-inverse" type="button" ng-click="loadMore(projects)">View more</button>
            </div>

            <!-- Blog Sidebar
        ================================================== -->
            <script src="~/js/loader.js"></script>
        </div>
    
    </div>  <!-- End Container -->

    <!-- Scroll to Top -->  
    <div id="toTop" class="hidden-phone hidden-tablet">Back to Top</div>
    <input type="hidden" value="@ViewBag.ModelCookie" id="a1"/>


